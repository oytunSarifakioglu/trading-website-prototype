
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mağaza</title>
    <link href="https://fonts.googleapis.com/css2?family=Oswald&display=swap" rel="stylesheet">
    <!--<link rel="stylesheet" href="mağaza-bar.css">-->
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        html {
            font-family: 'Oswald', sans-serif;
        }
        .white {
            color: #fff;
        }
        .element {
            text-decoration: none;
        }
            .element:hover {
                color: #fff;
            }
        .text-center {
            text-align: center;
        }
        .heading-small {
            font-size: 1.25rem;
        }
        .heading-medium {
            font-size: 1.5rem;
        }
        .heading-big {
            font-size: 2rem;
        }
        .bg-dark-blue {
            background-color: #419dec;
        }
        .bg-light-blue {
            background-color: #336ea2;
        }
        #navbar {
            color: #fff;
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 0 0.75rem;
            height: 70px;
        }
            #navbar ul {
                list-style-type: none;
                display: flex;
                align-items: center;
            }
                #navbar ul li a {
                    padding: 0.75rem;
                }
        .container {
            max-width: 1100px;
            margin: 0 auto;
        }
    </style>
</head>
<body>
    <header class="bg-dark-blue">
        <div class="container">
            <nav id="navbar">
                <h1 class="heading-small">Mağaza</h1>
                <ul class="white">
                    <li><a href="ürün ekle" class="element">Ürün Ekle</a></li>                   
                    @Html.ActionLink("Rapor","rapor")
                    @Html.ActionLink("Geçmiş Siparişler","gecmisSiparisler")
                    @Html.ActionLink("Ürün Bazlı Sipariş Raporu","urunBazliSatis")
                </ul>
            </nav>
        </div>
    </header>
</body>
</html>

